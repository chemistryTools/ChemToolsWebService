server {
	listen   80; ## listen for ipv4; this line is default and implied
	listen   [::]:80 default ipv6only=on; ## listen for ipv6

    root /home/est863/mysites/ChemToolsWebService;

	# Make site accessible from http://localhost/
	server_name 202.118.73.59;
    client_max_body_size 100m;
    client_body_temp_path /home/est863/mysites/tmp;

	location / {
        root /home/est863/mysites/ChemToolsWebService;
        uwsgi_pass 127.0.0.1:8080;
        include uwsgi_params;
        access_log off;
	}

	location /doc/ {
		alias /usr/share/doc/;
		autoindex on;
		allow 127.0.0.1;
		deny all;
	}

    location /static {
       alias /home/est863/mysites/ChemToolsWebService/static/; 
       access_log off;  
    }


    location ~.*\.(gif|jpg|png|ico|jpeg|bmp|swf|doc|pdf|docx|mol|sdf|csv|xls|xlsx)$ {
       expires 7d;
    }

    location /media {
        root  /home/est863/mysites/ChemToolsWebService/media/; 
        break;
    }

    location ~.*\.(css|js)$ {
       expires 12h;
    }
}
